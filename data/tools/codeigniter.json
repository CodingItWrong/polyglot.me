{
	"id": "codeigniter",
	"name": "CodeIgniter",
	"api": "http://ellislab.com/codeigniter/user-guide/",
	"featuresets": {
		"http-server": {
			"output": {
				"code": "$this->output->set_output(\"Hello, World!\")",
				"api": "http://ellislab.com/codeigniter/user-guide/libraries/output.html"
			},
			"get-data": {
				"code": "$this->input->get('myvar', true)",
				"api": "http://ellislab.com/codeigniter/user-guide/libraries/input.html"
			},
			"post-data-form": {
				"code": "$this->input->post('myvar', true)",
				"api": "http://ellislab.com/codeigniter/user-guide/libraries/input.html"
			},
			"uploaded-file": {
				"code": "$config['upload_path'] = './uploads/';\n$config['allowed_types'] = 'gif|jpg|png';\n$config['max_size'] = '100';\n$config['max_width']  = '1024';\n$config['max_height']  = '768';\n$this->load->library('upload', $config);\n\nif ( ! $this->upload->do_upload()) {\n    // error\n} else {\n    $this->upload->data();\n}",
				"api": "http://ellislab.com/codeigniter/user-guide/libraries/file_uploading.html"
			},
			"get-cookie": {
				"code": "$this->input->cookie('cookiename')",
				"api": "http://ellislab.com/codeigniter/user-guide/libraries/input.html"
			},
			"set-cookie": {
				"code": "$this->input->set_cookie(array( 'name'=>$name, 'value'=>$value, 'expire'=>$seconds_from_now, 'domain'=>$domain, 'path'=>$path, 'prefix'=>$prefix, 'secure'=>$https_only ))",
				"api": "http://ellislab.com/codeigniter/user-guide/libraries/input.html"
			},
			"get-header": {
				"code": "$this->input->get_request_header('headername')",
				"api": "http://ellislab.com/codeigniter/user-guide/libraries/input.html"
			},
			"set-header": {
				"code": "$this->output->set_header( $name_and_value )",
				"api": "http://ellislab.com/codeigniter/user-guide/libraries/output.html"
			},
			"status-code": {
				"code": "$this->output->set_status_header( $code[, $text] )",
				"api": "http://ellislab.com/codeigniter/user-guide/libraries/output.html"
			},
			"content-type": {
				"code": "$this->output->set_content_type( $type )",
				"api": "http://ellislab.com/codeigniter/user-guide/libraries/output.html"
			},
			"redirect": {
				"code": "$this->load->helper('url');\nredirect( $url );",
				"api": "http://ellislab.com/codeigniter/user-guide/helpers/url_helper.html"
			}
		},
		"validation": {
			"validate": {
				"code": "$this->load->library('form_validation');\n$this->form_validation->set_rules('myfield', 'My Field', 'required|max_length[20]');\nif ($this->form_validation->run() == FALSE) {\n    $myerrors = validation_errors();\n    …\n}",
				"api": "http://ellislab.com/codeigniter/user-guide/libraries/form_validation.html"
			},
			"custom-validator": [
				{
					"code": [
						{
							"file": "libraries/MY_Form_validation.php",
							"contents": "<?php\n\nclass MY_Form_validation extends CI_Form_validation {\n    function __construct($config = array())\n    { parent::__construct($config); }\n    function myValidatorName {\n        if(!…) {\n            $this->CI->form_validation->set_message('myValidatorName','This is the error message');\n        }\n        return true;\n    }\n}"
						}
					],
					"api": "http://ellislab.com/forums/viewthread/207257/"
				},
				{
					"code": [
						{
							"file": "mycontroller.php",
							"contents": "public function myAction() {\n    …\n    $this->form_validation->set_rules('username', 'Username', 'callback_myValidatorName');\n    …\n}\n\npublic function myValidatorName() {\n    if(!…) {\n        $this->CI->form_validation->set_message('myValidatorName','This is the error message');\n    }"
						}
					],
					"api": "http://ellislab.com/codeigniter/user-guide/libraries/form_validation.html#callbacks"
				}
			],
			"required": {
				"code": "required",
				"api": "http://ellislab.com/codeigniter/user-guide/libraries/form_validation.html#rulereference"
			},
			"min-length": {
				"code": "min_length[3]",
				"api": "http://ellislab.com/codeigniter/user-guide/libraries/form_validation.html#rulereference"
